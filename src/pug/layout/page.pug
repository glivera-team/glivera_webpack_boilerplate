extends ./_layout

block vars
	-
		array = {
			body_class: pageData.bodyClass,
			layout_mod: pageData.layoutMod,
			page_keywords: pageData.page_keywords,
			page_description: pageData.page_description,
			title_inner: pageData.title,
			template_name: pageData.templateName,
			headerArray: pageData.header,
			footerArray: pageData.footer,
		};

block content_block
	- let sectionsHtml = '';

	each section in pageData.sections
		- sectionsHtml += require(`../blocks/${section.sectionType}.pug`)(section);

	div!= sectionsHtml
